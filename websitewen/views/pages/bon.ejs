<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/scripts/handlebutton.js">

    // Event listener for keypress
document.addEventListener('keypress', (event) => {
    if (event.key === 'k' || event.key === 'K') {
        let pinCode = prompt("Please enter your pin code:");
        fetchAndPrintBalance(pinCode, (success, data) => {
            if (success) {
                console.log("Balance fetched and sent to Arduino successfully.");
            } else {
                console.error("Failed to fetch balance or send to Arduino.");
            }
        });
    }
});
</script>
